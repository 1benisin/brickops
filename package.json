{
  "name": "brickops",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "concurrently --continue-on-error --names next,convex \"pnpm dev:next\" \"pnpm dev:convex\"",
    "dev:next": "next dev",
    "dev:convex": "convex dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm test:frontend && pnpm test:backend",
    "test:with-e2e": "pnpm test && pnpm test:e2e",
    "test:frontend": "jest",
    "test:frontend:coverage": "jest --coverage",
    "test:backend": "NODE_OPTIONS=--require=./vitest.polyfill.js vitest run",
    "test:backend:watch": "NODE_OPTIONS=--require=./vitest.polyfill.js vitest",
    "test:backend:coverage": "NODE_OPTIONS=--require=./vitest.polyfill.js vitest run --coverage",
    "test:coverage": "pnpm test:frontend:coverage && pnpm test:backend:coverage",
    "test:ci": "pnpm lint && pnpm test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:dry-run": "playwright test --list",
    "prepare": "simple-git-hooks",
    "build:imports": "npx tsx scripts/catalog/build-catalog.ts --limit 0",
    "build:sample": "npx tsx scripts/catalog/build-catalog.ts --limit 100",
    "import:colors": "npx convex import --table colors --replace docs/external-documentation/api-bricklink/seed-data/colors.jsonl",
    "import:categories": "npx convex import --table categories --replace docs/external-documentation/api-bricklink/seed-data/categories.jsonl",
    "import:elements": "npx convex import --table bricklinkElementReference --replace docs/external-documentation/api-bricklink/seed-data/bricklinkElementReference.jsonl",
    "import:parts": "npx convex import --table parts --replace docs/external-documentation/api-bricklink/seed-data/parts.jsonl",
    "import:parts-sample": "npx convex import --table parts --replace docs/external-documentation/api-bricklink/seed-data/parts-sample.jsonl",
    "import:all": "pnpm import:colors && pnpm import:categories && pnpm import:elements && pnpm import:parts",
    "import:sample": "pnpm import:colors && pnpm import:categories && pnpm import:elements && pnpm import:parts-sample"
  },
  "dependencies": {
    "@auth/core": "0.37.0",
    "@convex-dev/auth": "^0.0.89",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "1.27.4",
    "date-fns": "^4.1.0",
    "he": "^1.2.0",
    "lucide-react": "^0.544.0",
    "next": "14.1.0",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.65.0",
    "sax": "^1.3.0",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "yargs": "^17.7.2",
    "zod": "^3.25.76",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "1.55.0",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@types/he": "^1.2.3",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.19",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@types/sax": "^1.2.7",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.2",
    "playwright": "1.55.0",
    "postcss": "8.4.33",
    "prettier": "3.2.5",
    "shadcn": "^3.3.1",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vitest": "3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "ignore-workspace-root-check": true
  }
}
