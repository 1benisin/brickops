{
  "name": "brickops",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "concurrently --continue-on-error --names next,convex \"pnpm dev:next\" \"pnpm dev:convex\"",
    "dev:next": "next dev",
    "dev:convex": "convex dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm test:frontend && pnpm test:backend && pnpm test:e2e",
    "test:frontend": "jest",
    "test:frontend:coverage": "jest --coverage",
    "test:backend": "NODE_OPTIONS=--require=./vitest.polyfill.js vitest run",
    "test:backend:watch": "NODE_OPTIONS=--require=./vitest.polyfill.js vitest",
    "test:backend:coverage": "NODE_OPTIONS=--require=./vitest.polyfill.js vitest run --coverage",
    "test:coverage": "pnpm test:frontend:coverage && pnpm test:backend:coverage",
    "test:ci": "pnpm lint && pnpm test:coverage && pnpm test:e2e:dry-run",
    "test:e2e": "playwright test",
    "test:e2e:dry-run": "playwright test --list",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@auth/core": "0.37.0",
    "@convex-dev/auth": "^0.0.89",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.11.0",
    "lucide-react": "^0.544.0",
    "next": "14.1.0",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "1.40.1",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.19",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.2",
    "playwright": "1.40.1",
    "postcss": "8.4.33",
    "prettier": "3.2.5",
    "shadcn": "^3.3.1",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vitest": "3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "ignore-workspace-root-check": true
  }
}
