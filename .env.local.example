
# Convex deployment configuration
NEXT_PUBLIC_CONVEX_URL="https://{your-team}-{project}.convex.cloud"
CONVEX_DEPLOYMENT=dev:your-deployment-name # Replace with your actual deployment
CONVEX_ADMIN_KEY=your-admin-key-here # Replace with your actual admin key

# Your app's site URL for auth (dev)
CONVEX_SITE_URL=http://localhost:3000

# Outbound email provider (Resend)
RESEND_API_KEY="sk_test_your_resend_key"
AUTH_EMAIL_FROM="BrickOps Auth <auth@brickops.dev>"

# BrickOwl API Credentials
BRICKOWL_API_KEY="your_brickowl_api_key_here"
BRICKOWL_WEBHOOK_TARGET="0.0.0.0"

# Rebrickable API Credentials (System-level - for catalog ID mapping)
REBRICKABLE_API_KEY="your_rebrickable_api_key_here"

# Bricklink API Credentials (System-level - for catalog data refresh)
BRICKLINK_CONSUMER_KEY="your_bricklink_consumer_key"
BRICKLINK_CONSUMER_SECRET="your_bricklink_consumer_secret"
BRICKLINK_ACCESS_TOKEN="your_bricklink_access_token"
BRICKLINK_TOKEN_SECRET="your_bricklink_token_secret"

# User Marketplace Credentials Encryption
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your_32_byte_base64_encoded_encryption_key_here"

# Feature Flags
# Set to "true" to disable external API calls in development/testing
DISABLE_EXTERNAL_CALLS="false"
